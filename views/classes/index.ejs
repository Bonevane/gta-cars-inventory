<%- include('../partials/header') %>

<div id="bg-image" class="bg-image"></div>
<div class="classes-container">
  <h2 class="class-header">Classes</h2>
  <div class="class-buttons">
    <% classes.forEach(cls => { %>
    <a href="/classes/<%= cls.id %>">
      <button class="glass"><%= cls.name %></button>
    </a>
    <% }) %>
  </div>
  <button class="glass" onclick="openClassModal()">+ Add Class</button>
</div>

<!-- Class Modal -->
<%- include('./modal') %>
