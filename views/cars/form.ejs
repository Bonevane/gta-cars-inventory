<div class="form-content">
<h2>Edit Car</h2>
<form action="/cars/<%= car.id %>?_method=PUT" method="POST">
  <label
    >Model:
    <input type="text" name="model" value="<%= car.model %>" required /> </label
  > 
  <label
    >Price:
    <input
      type="number"
      name="price"
      value="<%= car.price %>"
      required
    /> </label
  > 
  <label
    >Image URL:
    <input type="text" name="image_url" value="<%= car.image_url %>" /> </label
  > 
  <label
    >Engine Power:
    <input
      type="number"
      step="0.0001"
      name="engine_power"
      value="<%= car.engine_power %>"
    /> </label
  > 
  <label
    >Weight:
    <input type="number" name="weight" value="<%= car.weight %>" /> </label
  > 
  <label
    >Doors:
    <input type="number" name="doors" value="<%= car.doors %>" /> </label
  > 
  <label
    >Drive Type:
    <input
      type="text"
      name="drive_type"
      value="<%= car.drive_type %>"
    /> </label
  > 
  <label
    >Top Speed:
    <input
      type="number"
      step="0.01"
      name="top_speed"
      value="<%= car.top_speed %>"
    /> </label
  > 
  <label
    >Lap Time:
    <input type="text" name="lap_time" value="<%= car.lap_time %>" pattern="^([0-9]+):([0-5][0-9])\.[0-9]{3}$" placeholder="e.g., 1:04.245" required /> 
  </label
  > 
  <label
    >Drag Coefficient:
    <input
      type="number"
      step="0.001"
      name="drag_coefficient"
      value="<%= car.drag_coefficient %>"
    /> </label
  > 
  <label
    >Brake Force:
    <input
      type="number"
      step="0.01"
      name="brake_force"
      value="<%= car.brake_force %>"
    /> </label
  > 
  <label>Manufacturer:
    <select name="manufacturer_id">
      <% manufacturers.forEach(m => { %>
        <option value="<%= m.id %>" <%= car?.manufacturer_id === m.id ? 'selected' : '' %>><%= m.name %></option>
      <% }) %>
    </select>
  </label>

  <label>Class:
    <select name="class_id">
      <% classes.forEach(c => { %>
        <option value="<%= c.id %>" <%= car?.class_id === c.id ? 'selected' : '' %>><%= c.name %></option>
      <% }) %>
    </select>
  </label>

  <button type="submit">Save</button>
</form>
</div> 